set noerrorbells
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent
set noswapfile
set nobackup
set number
set nocompatible
set hidden
syntax on
set path+=$PWD/**
set nocp

" set undo file directory
set undodir=~/.vim/undo_dir
set undofile

" all lowercase-> insensitive | one or more uppercase -> sensitive
set ignorecase smartcase 
